#!/usr/bin/env bash

set -o nounset -o pipefail -o errexit

main() {
  local SCRIPT_DIR
  SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

  source "${SCRIPT_DIR}/meta" && meta_init "var"
  var_color

  if [[ ${#} -lt 2 ]]; then
    printf "%bUsage: ${0} [FILENAME] [ENV_VARS...]%b\n" "${RED}" "${RESET}" 1>&2
    return 1
  fi

  local FILENAME="${1}"
  shift

  local SED_COMMAND=("sed")
  for name in "${@}"; do
    if [[ -z ${name:-} ]]; then
      continue
    fi

    local KEY
    local VALUE
    if [[ ${name} =~ (.*)=(.*) ]]; then
      KEY=${BASH_REMATCH[1]}
      VALUE="${!BASH_REMATCH[2]}"
    else
      KEY="${name}"
      VALUE="${!name:-}"
    fi

    VALUE="${VALUE/\&/\\\&}"

    if [[ -z ${VALUE:-} ]]; then
      continue
    fi

    SED_COMMAND+=("-e" "s|\${\{0,1\}${KEY}}\{0,1\}|${VALUE}|g")
  done

  SED_COMMAND+=("${FILENAME}")

  "${SED_COMMAND[@]}"
}

main "${@:-}"
